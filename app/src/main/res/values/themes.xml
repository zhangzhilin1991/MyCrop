        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>

        <item name="android:windowAnimationStyle">@style/myCropWindowsAnimationStyle</item>
    </style>
    
    <style name="myCropWindowsAnimationStyle" parent="@android:style/Animation.Activity">
